main
public class Main {

	public static void main(String[] args) {
		
		Shape objshape = new Shape("Yellow");
		Rectangle objrectangle = new Rectangle();
		
		System.out.println(objshape.colour);
		System.out.println(objrectangle.colour);
	}

}

